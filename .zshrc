export LS_COLORS=$LS_COLORS':*.c=1;1:*.cpp=1;1:*.hpp=1;1:*.h=1;1:*.o=33:*.mod=33:*~=33'
alias ls='gls -aGpF --color'
alias delcache="find . -name '*~' -type f -delete"

